generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  patientId        String   @id @default(uuid())
  name             String
  dob              DateTime
  address          String
  contact          String
  sex              String
  ayushmanCard     String
  diagnosisHistory String

  // Relations
  opdbeds OPDBed[]   // Relation with OPDBed/Queue
  userId  String?    // Optional user who created the patient record
  user    User?      @relation(fields: [userId], references: [userId]) 
}

model OPDBed { // Represents Queue management
  hospitalId String
  patientId  String
  bedStatus  Opdstatus

  // Relations
  patient  Patient  @relation(fields: [patientId], references: [patientId])
  hospital Hospital @relation(fields: [hospitalId], references: [hospitalId])

  @@id([hospitalId, patientId])
}

model User {
  userId    String   @id @default(uuid())
  useremail String   @unique
  password  String
  username  String

  // Relation
  patients  Patient[] // One user can create multiple patients
}

model Medicine {
  medicineId   String   @id @default(uuid())
  name         String
  manufactured DateTime
  expiry       DateTime
}

model Admin {
  adminId  String @id @default(uuid())
  username String
  password String
}

model Hospital {
  hospitalId   String   @id @default(uuid())
  hospitalName String
  opdbeds      OPDBed[] // Relation with OPDBed/Queue
}

enum status {
  alloted
  pending
  failed
}

enum Opdstatus {
  empty
  full

}